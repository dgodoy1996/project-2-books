<%- include('../partials/header') %>

<section id="show-page">
    <div>Book Name</div>
    <div><%= book.name %></div>
    <div>Author</div>
    <div><%= book.author %></div>
    <div>Start Date</div>
    <div><%= book.startDate %></div>
    <div>End Date</div>
    <div><%= book.endDate %></div>
</section>

<br><br><h2>Book Synopsis</h2>
<form id="add-synopsis-form" method="POST" action="/books/<%= book._id %>/synopsis">
    <label>Synopsis</label>
    <textarea name="synopsis"></textarea>
    <label>Rating</label>
    <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <input type="submit" value="Add Synopsis">
</form>

<% if(book.synopsis.length) { %>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Synposis</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            <% book.synopsis.forEach(function(b) { %>
                <tr>
                    <td><%= b.createdAt.toLocaleDateString() %></td>
                    <td><%= b.synopsis %></td>
                    <td><%= b.rating %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <h5>No Synopsis' Yet</h5>
<% } %>

<%- include('../partials/footer') %>