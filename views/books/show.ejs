<%- include('../partials/header') %>

<section id="show-page">
    <div>Book Name</div>
    <div><%= book.name %></div>
    <div>Author</div>
    <div><%= book.author %></div>
    <div>Start Date</div>
    <div><%= book.startDate %></div>
    <div>End Date</div>
    <div><%= book.endDate %></div>
</section>

<br><br>
<form id="add-synopsis-form" method="POST" action="/books/<%= book._id %>/synopsis">
    <h3>What would you rate this book?</h3>
    <label>Rating</label>
    <select name="ratings">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <br><br><h3>Would you like to provide your own synopsis?</h3>
    <label>Synopsis</label>
    <textarea name="synopsis"></textarea>
    <br><br><input type="submit" value="Submit">
</form>

<br><br>
<% if(book.synopsis.length) { %>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Rating</th>
                <th>Synposis</th>
            </tr>
        </thead>
        <tbody>
            <% book.synopsis.forEach(function(b) { %>
                <tr>
                    <td><%= b.createdAt.toLocaleDateString() %></td>
                    <td><%= b.ratings %></td>
                    <td><%= b.synopsis %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <h5>No Synopsis Yet</h5>
<% } %>

<%- include('../partials/footer') %>